      },
      {
        "type": "click",
        "selector": "#submitBtn",
        "error_message": "点击提交按钮失败"
      },
      {
        "type": "wait_appear",
        "selector": "#loadingIndicator",
        "timeout": 3,
        "error_message": "等待加载指示器出现失败"
      },
      {
        "type": "wait_disappear",
        "selector": "#loadingIndicator",
        "timeout": 15,
        "error_message": "等待加载完成失败"
      }
    ]
